{% extends 'base.html.twig' %}

{% block body %}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success mr-2 mb-0">
			{{ message }}
		</div>
	{% endfor %}

	{% for message in app.flashes('error') %}
		<div class="alert alert-danger mr-2 mb-0">
			{{ message }}
		</div>
	{% endfor %}

	<div class="row">
		<div class="col-12">
			{{ wo_render_breadcrumbs() }}
		</div>
	</div>

	{% if is_granted('ROLE_SUPER_ADMIN') %}
		<div class="row">
			<div class="col-12">
				<div id="inviterForm" {% if not form.vars.submitted %} style="display: none;" {% endif %} class="w-100">
					<button type="button" id="closeInviter" class="close">
						<span aria-hidden="true" class="text-danger">&times;</span>
					</button>
					{{ form_start(form) }}
					<div class="invite-form--responsive justify-content-sm-around align-items-center ">
						<div class="form-group m-2">
							{{ form_errors(form.name) }}
							{{ form_widget(form.name) }}
							{{ form_help(form.name) }}
						</div>
						<div class="form-group m-2">
							{{ form_errors(form.surname) }}
							{{ form_widget(form.surname) }}
							{{ form_help(form.surname) }}
						</div>
						<div class="form-group m-2">
							{{ form_errors(form.email) }}
							{{ form_widget(form.email) }}
							{{ form_help(form.email) }}
						</div>
						{% if is_granted('ROLE_SUPER_ADMIN') %}
							<div class="form-group m-2 d-none">
								{{ form_errors(form.type) }}
								{{ form_widget(form.type) }}
								{{ form_help(form.type) }}
							</div>
						{% endif %}
						<div class="form-group m-2">
							{{ form_widget(form.submit) }}
						</div>
					</div>
					{{ form_end(form) }}
				</div>
			</div>
		</div>

		<div class="row">
			<div class="col-12 d-flex flex-column align-items-center">
				<a id="inviterBtn" class="nav-link btn btn-secondary w-25" href="#" role="button">Ajouter</a>
				<h2>Liste des administrateurs·rices</h2>
				<ul class="list-group w-75">
					{% for admin in admins %}
						<li class="list-group-item d-flex justify-content-between align-items-center">
							{{ admin.name}}
							{{admin.surname}}
							<form method="post" action="{{ path('user_delete', {id: admin.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr·e de vouloir supprimer cet·te administrateur·rice ? \nCette action est irréversible.')">
								<input type="hidden" name="_method" value='DELETE'>
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ admin.id) }}">
								<button class="btn btn-danger">Supprimer</button>
							</form>
						</li>
					{% endfor %}
				</ul>
			</div>
		</div>
	{% endif %}

	<div class="row">
		<div class="col-12 d-flex flex-column align-items-center">
			<a href="{{ path('classroom_new') }}" class="btn btn-secondary w-25 align-self-center">Créer une classe</a>
			<h3>Liste des classes</h3>
			<div class="table-responsive">
				<table class="table border-bottom">
					<thead class="thead-dark">
						<tr>
							<th scope="col"></th>
							<th scope="col">Nom</th>
							<th scope="col">Localisation</th>
							<th scope="col">Niveau</th>
							<th scope="col">Formateurs·rices</th>
							<th scope="col"></th>
						</tr>
					</thead>
						{% for classroom in classrooms %}
					<tbody>
							<tr>
								<th scope="row"></th>
								<td>
									<a href="{{ path('classroom_show', {id: classroom.id, extra: true}) }}">{{ classroom.name }}</a>
								</td>
								<td>{{ classroom.location }}</td>
								<td>{{ classroom.discipline }}</td>
								<td>
									{% for user in classroom.users %}
										/
										{% if user.roles[0] == 'ROLE_TEACHER' %}
											{{ user.name }}
										{% endif %}
									{% endfor %}
								</td>
								<td>
									<div class="d-flex justify-content-center w-50">
										<a href="{{ path('classroom_edit', {id: classroom.id}) }}" class="btn btn-secondary mr-lg-2" role="button">Éditer</a>
										<form method="post" action="{{ path('classroom_delete', {id: classroom.id}) }}" style="display: inline-block" onsubmit="return confirm('Êtes-vous sûr·e de vouloir supprimer cette classe  ? \nCette action est irréversible.')">
											<input type="hidden" name="_method" value='DELETE'>
											<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classroom.id) }}">
											<button class="btn btn-danger">Supprimer</button>
										</form>
									</div>
								</td>
							</tr>
						</div>
					</tbody>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table></div></div></div>{% endblock %}
